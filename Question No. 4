package programmingClass1;

public class Class4 {
	public static void main(String[] args) {
		   int i, j, k, m;
		   m = 3;
		   k = m *2 - 1;   
		   for (i = 1; i <= k; i++) {
		      for (j = 1; j <= k; j++) {
		         if (j == i || j == k - i + 1)
		            System.out.print("*");
		            System.out.print(" ");
		      }
		      System.out.println();
		   }
		  }
		}



//Output
*    * 
 *  *  
  *   
 *  *  
*    * 
